# 目标系统架构
CONFIG_TARGET_arm64=y
CONFIG_TARGET_arm64_efi=y

# 目标子架构（根据你的硬件选择）
CONFIG_TARGET_arm64_DEVICE_generic=y

# 镜像配置
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_IMAGES_PAD=y

# 启用UEFI支持
CONFIG_GRUB_IMAGES=y
CONFIG_GRUB_EFI_IMAGES=y
CONFIG_GRUB_EFI_ENABLE=y

# 内核配置
CONFIG_LINUX_5_15=y 
CONFIG_KERNEL_EFI=y
CONFIG_KERNEL_EFI_STUB=y

# 文件系统支持
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_libfdisk=y
CONFIG_PACKAGE_e2fsprogs=y

# UEFI相关工具
CONFIG_PACKAGE_grub2-efi=y
CONFIG_PACKAGE_grub2-efi-images=y

# 网络配置
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_firewall=y

# 基本工具
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_coreutils=y
CONFIG_PACKAGE_tar=y
CONFIG_PACKAGE_gzip=y

# 其他配置
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_FEATURE_USE_INITTAB=y
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING=y
CONFIG_BUSYBOX_CONFIG_FEATURE_VI_USE_SIGNALS=y
